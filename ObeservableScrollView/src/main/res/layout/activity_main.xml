<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidobservablescrollviewdemo.MainActivity">

    <EditText
        android:id="@+id/hour_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="设置时 范围0-23"
        android:inputType="number" />

    <EditText
        android:id="@+id/minute_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="设置分 范围0-59"
        android:inputType="number" />

    <EditText
        android:id="@+id/message_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="设置闹铃响时提示信息"
        android:inputType="text" />

    <Button
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setTime"
        android:text="设定" />

    <Button
        android:id="@+id/show_all_alarm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showAllAlarm"
        android:text="显示设置的所有闹钟" />
</LinearLayout>
